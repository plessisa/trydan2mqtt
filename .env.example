# Environment variables for Docker Compose (External MQTT Broker)
# Copy this file to .env and customize the values

# Trydan Configuration
TRYDAN_HOST=192.168.1.100
TRYDAN_PORT=502
TRYDAN_SLAVE_ID=1

# External MQTT Broker Configuration
MQTT_HOST=192.168.1.50
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# Application Configuration
POLL_INTERVAL=15
LOG_LEVEL=INFO
TOPIC_PREFIX=trydan

# Timezone (optional)
TZ=UTC